node{
    def mavenHome = tool name: "maven-3.9.0"
stage('github')
{
git branch: 'development', credentialsId: 'f835c239-d24f-464c-963f-fd7021fa086b', url: 'https://github.com/bhanu13051991/maven-web-application.git'
}
stage('build')
{
sh "${mavenHome}/bin/mvn clean package"
}
stage('sonarqube')
{
sh "${mavenHome}/bin/mvn sonar:sonar"
}
stage('NexusArtifactsupload')
{
sh "${mavenHome}/bin/mvn deploy"
}
stage('DeployAppInto Tomcat')
{
    sshagent(['f873e532-dde5-4b6f-86bf-bb02247090e5']) {
    sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@3.88.91.179:/opt/tomcat/webapps/"
}
}
stage('Email notofication')
{
    emailext body: 'build is over and deployed in tomcat', subject: 'Build is over', to: 'sbprakash01@gmail.com'
}
}
